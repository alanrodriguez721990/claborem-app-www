<?xml version='1.0' encoding='utf-8'?>
<widget xmlns= "http://www.w3.org/ns/widgets"
        xmlns:gap= "http://phonegap.com/ns/1.0"
        id= "com.imotionconsulting.claborem.app"
        version= "1.1.2" >

    <name>C-Laborem</name>
    <description>
        C-Laborem - Certificaci√≥n laboral
    </description>
    <author email="info@imotionconsulting.com.ar" href="http://imotionconsulting.com.ar">
        IMotion Consulting
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="4000" />
    <preference name="FadeSplashScreenDuration" value="2000"/>
    <preference name="SplashMaintainAspectRatio" value="true" />
    <platform name="android">
        <!-- Icon -->
        <icon src="res/icon/android/icon-ldpi.png" qualifier="ldpi" />
        <icon src="res/icon/android/icon-mdpi.png" qualifier="mdpi" />
        <icon src="res/icon/android/icon-hdpi.png" qualifier="hdpi" />
        <icon src="res/icon/android/icon-xhdpi.png" qualifier="xhdpi" />
        <icon src="res/icon/android/icon-xxhdpi.png" qualifier="xxhdpi" />
        <icon src="res/icon/android/icon-xxxhdpi.png" qualifier="xxxhdpi" />

    </platform>
    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 / 6+ -->
        <icon src="res/icon/ios/icon-60@3x.png"     width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/icon/ios/icon-60.png"        width="60" height="60" />
        <icon src="res/icon/ios/icon-60@2x.png"     width="120" height="120" />
        <!-- iPad -->
        <icon src="res/icon/ios/icon-76.png"        width="76" height="76" />
        <icon src="res/icon/ios/icon-76@2x.png"     width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="res/icon/ios/icon-40.png"        width="40" height="40" />
        <icon src="res/icon/ios/icon-40@2x.png"     width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="res/icon/ios/icon-57.png"        width="57" height="57" />
        <icon src="res/icon/ios/icon-57@2x.png"     width="114" height="114" />
        <!-- iPad -->
        <icon src="res/icon/ios/icon-72.png"        width="72" height="72" />
        <icon src="res/icon/ios/icon-72@2x.png"     width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/icon/ios/icon-small.png"     width="29" height="29" />
        <icon src="res/icon/ios/icon-small@2x.png"  width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/icon/ios/icon-50.png"        width="50" height="50" />
        <icon src="res/icon/ios/icon-50@2x.png"     width="100" height="100" />
    </platform>

    <!-- Splash screen Android -->
    <splash src="res/screen/android/land-320x200.9.png"     platform="android" qualifier="land-ldpi"/>
    <splash src="res/screen/android/land-480x320.9.png"     platform="android" qualifier="land-mdpi"/>
    <splash src="res/screen/android/land-800x480.9.png"     platform="android" qualifier="land-hdpi"/>
    <splash src="res/screen/android/land-1280x720.9.png"    platform="android" qualifier="land-xhdpi"/>
    <splash src="res/screen/android/land-1920x1080.9.png"   platform="android" qualifier="land-xxhdpi"/>
    <splash src="res/screen/android/port-200x320.9.png"     platform="android" qualifier="port-ldpi"/>
    <splash src="res/screen/android/port-320x480.9.png"     platform="android" qualifier="port-mdpi"/>
    <splash src="res/screen/android/port-480x800.9.png"     platform="android" qualifier="port-hdpi"/>
    <splash src="res/screen/android/port-720x1280.9.png"    platform="android" qualifier="port-xhdpi"/>
    <splash src="res/screen/android/port-1080x1920.9.png"   platform="android" qualifier="port-xxhdpi"/>

    <!-- Splash screen iOS -->
    <!-- iPhone and iPod touch -->
    <splash src="res/screen/ios/iphone-port.png"            platform="ios"  width="320" height="480" />
    <splash src="res/screen/ios/iphone-land.png"            platform="ios"  width="480" height="320" />
    <splash src="res/screen/ios/iphone-port-2x.png"         platform="ios"  width="640" height="960" />
    <splash src="res/screen/ios/iphone-land-2x.png"         platform="ios"  width="960" height="640" />
    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <splash src="res/screen/ios/iphone5-port-retina-2x.png" platform="ios"  width="640" height="1136" />
    <splash src="res/screen/ios/iphone5-land-retina-2x.png" platform="ios"  width="1136" height="640" />
    <!-- iPhone 6 -->
    <splash src="res/screen/ios/iphone6-port-2x.png"        platform="ios"  width="750" height="1334" />
    <splash src="res/screen/ios/iphone6-land-2x.png"        platform="ios"  width="1334" height="750" />
    <splash src="res/screen/ios/iphone6p-port-3x.png"       platform="ios"  width="1242" height="2208" />
    <splash src="res/screen/ios/iphone6p-land-3x.png"       platform="ios"  width="2208" height="1242" />
    <!-- iPad -->
    <splash src="res/screen/ios/ipad-port.png"              platform="ios"  width="768" height="1024" />
    <splash src="res/screen/ios/ipad-land.png"              platform="ios"  width="1024" height="768" />
    <!-- Retina iPad -->
    <splash src="res/screen/ios/ipad-port-2x.png"           platform="ios"  width="1536" height="2048" />
    <splash src="res/screen/ios/ipad-land-2x.png"           platform="ios"  width="2048" height="1536" />

    <!-- PLUGINS --> 
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.4" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#495b79" />


</widget>
